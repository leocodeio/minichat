{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test"
      ]
    ],
    "subject-case": [0, "never"],
    "scope-empty": [2, "never"],
    "body-max-line-length": [1, "always", 100]
  }
}
